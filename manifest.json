{
	"manifest_version": 2,

	"name": "portable radio",
	"description": "listen while you read",
	"version": "1.0",
	"permissions": [
	"https://api.spotify.com/"
	],

	"browser_action": {
		"default_title": "",
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
	  {
		"matches": ["*://www.theguardian.com/*"],
		"js": ["content.js"]
	  }
	]


}